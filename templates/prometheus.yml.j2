global:
  scrape_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['localhost:9093']

rule_files:
  - "/etc/prometheus/alerts.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'caddy'
    scrape_interval: 5s
    metrics_path: /metrics
    static_configs:
      - targets: ['localhost:2019']

  - job_name: 'alertmanager'
    static_configs:
      - targets: ['localhost:9093']
